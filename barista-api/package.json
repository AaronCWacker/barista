{
  "name": "barista-server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "build": "rm -Rf dist && tsc -p tsconfig.build.json",
    "build:prod": "yarn build",
    "compose": "APP_UNIQUE_ID=dev;docker-compose -f ./docker/barista-compose-services.yml -f ./docker/barista-compose-apps.yml",
    "compose:dev": "docker-compose -f ./docker/barista-compose-services.yml",
    "compose:rebuild": "docker-compose -f ./docker/barista-compose-services.yml -f ./docker/barista-compose-apps.yml build barista-api barista-scan barista-web",
    "compose:rebuild:dev": "docker-compose -f ./docker/barista-compose-services.yml build db db-test redis",
    "format": "prettier \"src/**/*.ts\"",
    "format:ci": "yarn format -c",
    "format:watch": "onchange '**/*.*' -- yarn format-lint",
    "format-lint": "yarn format --write  && yarn lint --fix",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:ci": "yarn lint",
    "start": "yarn build && ts-node -r tsconfig-paths/register src/main.ts",
    "debug": "yarn start",
    "start:debug": "yarn build && nodemon --config nodemon-debug.json",
    "start:dev": "concurrently --handle-input \"wait-on dist/main.js && nodemon\" \"tsc -w -p tsconfig.build.json\" ",
    "start:prod": "node dist/main.js",
    "start:container": "yarn db:migrate && yarn db:seed && yarn start:prod",
    "db:import:create": "yarn typeorm migration:create -c import -n",
    "db:import": "yarn typeorm migration:run -c import",
    "db:import:revert": "yarn typeorm migration:revert -c import",
    "db:import:test": "TEST_DB=true yarn typeorm migration:run -c import",
    "db:seed:create:demo": "yarn typeorm migration:create -c demo-seed -n",
    "db:seed:create": "yarn typeorm migration:create -c seed -n",
    "db:seed": "yarn typeorm migration:run -c seed",
    "db:seed:revert": "yarn typeorm migration:revert -c seed",
    "db:seed:test": "TEST_DB=true yarn typeorm migration:run -c seed",
    "db:seed:demo": "yarn typeorm migration:run -c demo-seed",
    "db:migrate": "yarn typeorm migration:run",
    "db:migrate:revert": "yarn typeorm migration:revert",
    "db:migration:create": "yarn typeorm migration:generate -n",
    "db:migrate:test": "TEST_DB=true yarn db:migrate",
    "db:reset:test": "yarn db:drop:test && yarn db:migrate:test && yarn db:seed:test",
    "db:sync": "yarn typeorm schema:sync",
    "db:drop": "yarn typeorm schema:drop",
    "db:drop:test": "TEST_DB=true yarn typeorm schema:drop",
    "db:reset": "yarn build && yarn db:reset:server",
    "db:reset:server": "yarn db:drop && yarn db:migrate && yarn db:seed",
    "db:reset:seed": "yarn db:reset && yarn db:seed:demo",
    "seed:revert": "yarn typeorm migration:revert -c seed",
    "test:once": "yarn build && jest",
    "test": "yarn test:once --watch",
    "test:ci": "yarn test:once --ci --reporters=default --reporters=jest-junit --coverage",
    "test:cov": "yarn test:once --coverage",
    "test:debug": "yarn build && node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:once": "yarn build && NODE_ENV=test; TEST_DB=true jest --config ./test/jest-e2e.json",
    "test:e2e": "yarn test:e2e:once --watch",
    "test:clear": "jest --clearCache",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "majestic": "TEST_DB=true majestic --app",
    "majestic:e2e": "TEST_DB=true majestic --config=e2e --app",
    "write:app-info": "yarn write:commit-hash; yarn write:app-version; yarn write:app-environment; cat src/info/*",
    "write:commit-hash": "COMMIT_HASH=$(git log --pretty=format:%h -n 1); replace 'HEAD' $COMMIT_HASH src/info/commit-hash.ts",
    "write:app-version": "APP_VERSION=$(node -pe \"require('./package.json').version\"); replace '0.0.0.0' $APP_VERSION src/info/app-version.ts",
    "write:app-environment": "APP_ENVIRONMENT=${ENV:-undefined}; replace 'local' $APP_ENVIRONMENT src/info/app-environment.ts",
    "spdx:update": "nwget https://github.com/spdx/license-list-data/raw/master/json/licenses.json -O src/services/license/spdx-licenses.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.0.0",
    "@nestjs/core": "^6.0.0",
    "@nestjs/cqrs": "^6.0.1",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/passport": "^6.1.0",
    "@nestjs/platform-express": "^6.0.0",
    "@nestjs/swagger": "^3.0.2",
    "@nestjs/typeorm": "^6.1.2",
    "@nestjsx/crud": "^4.0.0",
    "@nestjsx/crud-request": "^4.0.0",
    "@nestjsx/crud-typeorm": "^4.0.0",
    "@types/bull": "^3.5.14",
    "@types/dotenv": "^6.1.1",
    "@types/lodash": "^4.14.161",
    "@types/nodemailer": "^6.2.2",
    "@types/string-similarity": "^3.0.0",
    "all-unpacker": "^0.1.3",
    "badge-maker": "^3.2.0",
    "bcrypt": "^3.0.6",
    "bull": "^3.10.0",
    "bull-arena": "^2.6.3",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.9.1",
    "convert-to-object": "^0.0.4",
    "csv-parse": "^4.6.3",
    "dotenv": "^8.0.0",
    "elastic-apm-node": "^3.2.0",
    "lodash": "^4.17.20",
    "module-alias": "^2.2.0",
    "nest-bull": "^0.9.0",
    "nestjs-config": "^1.4.1",
    "nestjs-typeorm-paginate": "^1.0.2",
    "nestjsx-crud": "nestjsx/crud",
    "nodemailer": "^6.3.1",
    "p-iteration": "^1.1.8",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^8.3.3",
    "promised-ldap": "^0.3.0",
    "reflect-metadata": "^0.1.12",
    "request-promise": "^4.2.5",
    "rimraf": "^2.6.2",
    "rxjs": "^6.3.3",
    "shelljs": "^0.8.3",
    "simple-git": "^2.12.0",
    "string-similarity": "^3.0.0",
    "swagger-ui-express": "^4.0.6",
    "typeorm": "^0.2.18",
    "uuid": "^3.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.0.0",
    "@types/express": "^4.16.0",
    "@types/factory-girl": "^5.0.0",
    "@types/faker": "^4.1.5",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/passport-jwt": "^3.0.1",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.7",
    "concurrently": "^4.1.0",
    "factory-girl": "^5.0.4",
    "faker": "^5.1.0",
    "jest": "24.8.0",
    "jest-junit": "^6.4.0",
    "majestic": "^1.6.0",
    "nodemon": "^1.18.9",
    "onchange": "^6.0.0",
    "prettier": "^1.15.3",
    "replace": "^1.1.0",
    "supertest": "^3.4.1",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.3",
    "tslint-etc": "^1.6.0",
    "tslint-lines-between-class-members": "^1.3.6",
    "typescript": "3.7.2",
    "wait-on": "^3.2.0",
    "wget-improved": "^3.2.1"
  },
  "_moduleAliases": {
    "@app": "dist"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "coverageReporters": [
      "text",
      "cobertura"
    ],
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@app/(.*)$": "<rootDir>/$1"
    },
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "suiteName": "Barista API Tests",
    "outputDirectory": ".",
    "outputName": "./junit.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "majestic": {
    "jestScriptPath": "node_modules/jest/bin/jest.js",
    "configs": {
      "e2e": {
        "args": [
          "--config=./test/jest-e2e.json"
        ]
      }
    }
  }
}
